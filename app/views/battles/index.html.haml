.body
  .header
    =@monster
    が現れた
  .main
    .left-bar
      .player-zone
        .player-zone__name
        勇者
        .player-zone__hp
        HP 100/100
        .player-zone__battle-select
          .form
            %form{action:"#",id:"new_message", method:"post",class:"plaing-form"}
            %input.plaing-message{type:"text", name:"message[content]"}
          .submit
            %input.attack{type:"submit", value:"攻撃"}
            %input.supercial{type:"submit", value:"必殺技"}
            %input.defence{type:"submit", value:"防御"}
    .right-bar
      .monster-zone
        .player-zone__name
        = @monster
        .__hp
        HP 100/100
        .__monster-image
          = image_tag 'pipo-boss001.png', width:'300', height:'180'
    .battles
      .battle-field
        .messages
          .battle-message
            .message-text
              .__attack
              勇者の攻撃！！
              .__send
              <<<<いくぜ！！>>>>
              .__damage
              = @damage
              ポイントのダメージ
      .footer
